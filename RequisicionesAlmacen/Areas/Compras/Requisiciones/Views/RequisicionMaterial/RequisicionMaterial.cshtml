                                                .ColSpan(6)
                                                .CssClass("tx-bold")
                                                .Editor(e => e.NumberBox()
                                                    .ID("dxTxtTotalPartida")
                                                    .Format("$ #,##0.0000")
                                                    .ShowSpinButtons(false)
                                                    .ReadOnly(true));
