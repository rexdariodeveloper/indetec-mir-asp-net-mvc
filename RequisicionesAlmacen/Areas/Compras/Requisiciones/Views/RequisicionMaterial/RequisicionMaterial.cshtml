@using (Html.DevExtreme().NamedTemplate("detallesTemplate"))
{
    <div class="">
        <div class="row">
            <div class="col-12">
                @(Html.DevExtreme().DataGrid<RequisicionMaterialDetalleItem>()
                    .ID("dxGridDetalles")
                    .DataSource(m => m.Array().Data(Model.ListRequisicionMaterialDetalles).Key("RequisicionMaterialDetalleId"))
                    .ShowBorders(true)
                    .ColumnAutoWidth(true)
                    .AllowColumnResizing(true)
                    .ColumnResizingMode(ColumnResizingMode.Widget)
                    .RowAlternationEnabled(true)
                    .NoDataText("Sin registros")
                    .OnCellPrepared("onCellPrepared")
                    .Columns(c =>
                    {
                        c.AddFor(m => m.UnidadAdministrativaId).Alignment(HorizontalAlignment.Center);
                        c.AddFor(m => m.ProyectoId).Alignment(HorizontalAlignment.Center);
                        c.AddFor(m => m.TipoGastoId).Alignment(HorizontalAlignment.Center);
                        c.AddFor(m => m.Producto);
                        c.AddFor(m => m.UnidadDeMedida);
                        c.AddFor(m => m.CostoUnitario).Format("$ #,##0.0000");
                        c.AddFor(m => m.Cantidad).Format("#,##0.0000");
                        c.AddFor(m => m.TotalPartida).Format("$ #,##0.0000");
                        c.AddFor(m => m.Estatus).Visible(Model.RequisicionMaterial.RequisicionMaterialId > 0);
                        c.Add()
                            .Width(100)
                            .Caption("Comentarios")
                            .Fixed(false)
                            .Type(GridCommandColumnType.Buttons)
                            .Buttons(b =>
                            {
                                b.Add()
                                    .Name("btnComentario")
                                    .Hint("Comentario")
                                    .Icon("comment")
                                    .Visible(new JS("verComentarios"))
                                    .OnClick("editaComentario");
                            });
                        c.Add()
                            .Width(100)
                            .Caption("")
                            .Visible(!Model.SoloLectura)
                            .Fixed(true)
                            .FixedPosition(HorizontalEdge.Right)
                            .Type(GridCommandColumnType.Buttons)
                            .Buttons(b =>
                            {
                                b.Add()
                                    .Name("btnEditar")
                                    .Hint("Editar")
                                    .Icon("edit")
                                    .Visible(new JS("permiteEditarArticulo"))
                                    .OnClick("editaRegistro");

                                b.Add()
                                    .Name("btnEliminar")
                                    .Hint("Eliminar")
                                    .Icon("trash")
                                    .Visible(new JS("permiteEditarArticulo"))
                                    .OnClick("validaEliminarArticulo");
                            });
                    })
                    .SortByGroupSummaryInfo(i => i.Add().SummaryItem("count"))
                    .Summary(s => s.GroupItems(items =>
                    {
                        items.AddFor(m => m.TotalPartida)
                            .SummaryType(SummaryType.Sum)
                            .ValueFormat("$ #,##0.00")
                            .ShowInGroupFooter(true)
                            .DisplayFormat("Total Solicitud: {0}");
                    })
                    )
                    .Paging(paging => paging.PageSize(10))
                    .Pager(pager =>
                    {
                        pager.ShowPageSizeSelector(true);
                        pager.AllowedPageSizes(new[] { 0, 10, 20, 30, 40, 50 });
                        pager.ShowInfo(true);
                        pager.InfoText("Página {0} de {1} ( {2} Registros )");
                    })
                )
            </div>
        </div>
    </div>
}

@using (Html.DevExtreme().NamedTemplate("DataGridTemplate"))
{
    @(Html.DevExtreme().DataGrid()
        .ID("dxDataGridTemplate")
        .DataSource(new JS(@"component.getDataSource()"))
        .KeyExpr("ProductoDetalleId")
        .AllowColumnReordering(false)
        .ColumnAutoWidth(true)
        .WordWrapEnabled(true)
        .ShowBorders(true)
        .Grouping(g => g.AutoExpandAll(false))
        .NoDataText("Sin registros")
        .Selection(s => s.Mode(SelectionMode.Single))
        .OnCellPrepared("onCellPrepared")
        .Columns(c =>
        {
            c.Add().DataField("Producto").AllowSorting(false).GroupIndex(0);
            c.Add().DataField("Almacen").Caption("Almacén").AllowSorting(false);
            c.Add().DataField("UnidadAdministrativaId")
                .Caption("Unidad Administrativa")
                .Alignment(HorizontalAlignment.Center)
                .AllowSorting(false);
            c.Add().DataField("ProyectoId")
                .Caption("Proyecto")
                .Alignment(HorizontalAlignment.Center)
                .AllowSorting(false);
            c.Add().DataField("TipoGastoId")
                .Caption("Tipo de Gasto")
                .Alignment(HorizontalAlignment.Center)
                .AllowSorting(false);
        })
        .HoverStateEnabled(true)
        .Paging(p => p.PageSize(10))
        .FilterRow(f => f.Visible(true))
        .Scrolling(s => s.Mode(GridScrollingMode.Virtual))
        .Height(330)
        .OnSelectionChanged(@<text>
            function(selectedItems) {
                if(selectedItems.selectedRowKeys.length) {
                    cboProductoChange(selectedItems.selectedRowKeys[0]);
                    component.option("value", selectedItems.selectedRowKeys[0].ProductoDetalleId);
                }
            }
        </text>)
    )
}

