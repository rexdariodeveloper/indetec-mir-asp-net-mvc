@using RequisicionesAlmacenBL.Entities
@using RequisicionesAlmacenBL.Models.Mapeos
@model RequisicionMaterialViewModel
@using Newtonsoft.Json;

<link href="~/Content/Site.css" rel="stylesheet" />

@Html.Partial("_HeaderLayout", new ViewDataDictionary { { "NombreFicha", "Solicitud de Materiales y/o Consumibles" }, { "Accion", Model.RequisicionMaterial.RequisicionMaterialId > 0 ? Model.SoloLectura ? "Ver" : "Editar" : "Nuevo" }, { "Icono", "icon ion-clipboard" } })
<div class="br-pagebody">
    <div class="br-section-wrapper">
        @using (Html.BeginForm())
        {
            using (Html.DevExtreme().ValidationGroup("dxValidationGroup"))
            {
                @Html.AntiForgeryToken();

                @(Html.DevExtreme().Form<ARtblRequisicionMaterial>()
                    .ID("dxForm")
                    .FormData(Model.RequisicionMaterial)
                    .LabelLocation(FormLabelLocation.Top)
                    .RequiredMark("(*)")
                    .ReadOnly(Model.SoloLectura)
                    .Items(
                        items =>
                        {
                            items.AddGroup().ColCount(12).Items(
                                itemGroup =>
                                {
                                    itemGroup.AddSimple()
                                        .Label(label => label.Text("Datos Generales").ShowColon(false))
                                        .ColSpan(12)
                                        .CssClass("h6 br-section-label");
                                }
                            );

                            items.AddGroup().ColCount(12).Items(
                                itemGroup0 =>
                                {
                                    itemGroup0.AddGroup().ColSpan(12).Items(
                                        itemGroup =>
                                        {
                                            itemGroup.AddGroup().ColCount(12).Items(
                                                itemGroup2 =>
                                                {
                                                    itemGroup2.AddSimpleFor(m => m.AreaId)
                                                        .ColSpan(6)
                                                        .CssClass("tx-bold")
                                                        .Editor(e => e.SelectBox()
                                                            .ID("dxCboDependencia")
                                                            .DataSource(Model.ListAreas)
                                                            .ValueExpr("DependenciaId")
                                                            .DisplayExpr(new JS("(params) => {return params ? params.DependenciaId + ' - ' + params.Nombre : null}"))
                                                            .SearchEnabled(true)
                                                            .SearchMode(DropDownSearchMode.Contains)
                                                            .NoDataText("Sin registros que mostrar")
                                                            .Placeholder("Selecciona una opción")
                                                            .ReadOnly(Model.RequisicionMaterial.RequisicionMaterialId > 0 || Model.ListAreas.Count() <= 1)
                                                            .Value(Model.Empleado != null ? Model.Empleado.AreaAdscripcionId : null));

                                                    itemGroup2.AddSimpleFor(m => m.FechaRequisicion)
                                                        .ColSpan(6)
                                                        .CssClass("tx-bold")
                                                        .Editor(e => e.DateBox()
                                                            .ID("dxTxtFecha")
                                                            .DisplayFormat("dd/MM/yyyy")
                                                            .OnValueChanged("setCambios"));

                                                    itemGroup2.AddSimpleFor(m => m.UnidadAdministrativaId)
                                                        .ColSpan(6)
                                                        .Editor(e => e.SelectBox()
                                                            .ID("dxCboUnidadAdministrativa")
                                                            .DataSource(Model.ListUnidadesAdministrativas)
                                                            .ValueExpr("DependenciaId")
                                                            .DisplayExpr(new JS("(params) => {return params ? params.DependenciaId + ' - ' + params.Nombre : null}"))
                                                            .SearchEnabled(true)
                                                            .SearchMode(DropDownSearchMode.Contains)
                                                            .NoDataText("Sin registros que mostrar")
                                                            .Placeholder("Selecciona una opción")
                                                            .ReadOnly(Model.RequisicionMaterial.RequisicionMaterialId > 0)
                                                            .OnValueChanged("cboUnidadAdministrativaChange"));

                                                    itemGroup2.AddSimpleFor(m => m.ProyectoId)
                                                        .ColSpan(6)
                                                        .Editor(e => e.SelectBox()
                                                            .ID("dxCboProyecto")
                                                            .DataSource(Model.ListProyectos)
                                                            .ValueExpr("ProyectoId")
                                                            .DisplayExpr(new JS("(params) => {return params ? params.ProyectoId + ' - ' + params.Nombre : null}"))
                                                            .SearchEnabled(true)
                                                            .SearchMode(DropDownSearchMode.Contains)
                                                            .NoDataText("Sin registros que mostrar")
                                                            .Placeholder("Selecciona una opción")
                                                            .ReadOnly(Model.RequisicionMaterial.RequisicionMaterialId > 0)
                                                            .OnValueChanged("cboProyectoChange"));
                                                }
                                            );
                                        }
                                    );
                                }
                            ).CssClass("form-layout form-layout-1");

                            items.AddGroup().ColCount(12).Items(
                                itemGroup =>
                                {
                                    itemGroup.AddSimple()
                                        .HelpText("")
                                        .ColSpan(12)
                                        .CssClass("h6 br-section-label");
                                }
                            );

                            items.AddGroup().ColCount(12).Items(
                                itemGroup =>
                                {
                                    itemGroup.AddSimple()
                                        .Label(label => label.Text("Artículos").ShowColon(false))
                                        .ColSpan(12)
                                        .CssClass("h6 br-section-label");
                                }
                            );

                            items.AddGroup().ColCount(12).Items(
                                itemGroup =>
                                {
                                    itemGroup.AddGroup().ColSpan(12).Items(
                                        itemGroup0 =>
                                        {
                                            itemGroup0.AddGroup().ColCount(12).Items(
                                                itemGroup2 =>
                                                {
                                                    itemGroup2.AddSimple().Template(new TemplateName("btnAgregarTemplate"))
                                                        .ColSpan(12)
                                                        .Visible(!Model.SoloLectura && Model.RequisicionMaterial.EstatusId == ControlMaestroMapeo.AREstatusRequisicion.GUARDADA);
                                                }
                                            );

                                            itemGroup0.AddGroup().ColCount(12).Items(
                                                itemGroup2 =>
                                                {
                                                    itemGroup2.AddSimple().Template(new TemplateName("detallesTemplate"))
                                                        .ColSpan(12);
                                                }
                                            );
                                        }
                                    );
                                }
                            ).CssClass("form-layout form-layout-1");
                        }
                    )
                )

                <div class="form-layout-footer pd-t-10">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="float-right">
                                @(Html.DevExtreme()
                                    .Button()
                                    .ID("dxButtonImprimir")
                                    .Text("Imprimir")
                                    .ElementAttr("class", "btn-normal btn-oblong btn-width-100 mg-t-15 mg-l-5")
                                    .OnClick("imprimir")
                                )
                                @(Html.DevExtreme()
                                    .Button()
                                    .ID("dxButtonCancelar")
                                    .Text("Cerrar")
                                    .ElementAttr("class", "btn-normal btn-oblong btn-width-100 mg-t-15 mg-l-5")
                                    .OnClick("function() { validaDeshacer(true); }")
                                )
                                @(Html.DevExtreme()
                                    .Button()
                                    .ID("dxButtonDeshacer")
                                    .Text("Deshacer")
                                    .ElementAttr("class", "btn-normal btn-oblong btn-width-100 mg-t-15 mg-l-5")
                                    .OnClick("function() { validaDeshacer(false); }")
                                )
                                @(Html.DevExtreme()
                                    .Button()
                                    .ID("dxButtonEliminar")
                                    .Text("Cancelar")
                                    .ElementAttr("class", "btn-danger btn-oblong btn-width-100 mg-t-15 mg-l-5")
                                    .OnClick("validaEliminar")
                                )
                                @(Html.DevExtreme()
                                    .Button()
                                    .ID("dxButtonEnviarAutorizar")
                                    .Text("Enviar")
                                    .ElementAttr("class", "btn-success btn-oblong btn-width-100 mg-t-15 mg-l-5")
                                    .OnClick("enviarAutorizar")
                                )
                                @(Html.DevExtreme()
                                    .Button()
                                    .ID("dxButtonGuardaCambios")
                                    .Text("Guardar")
                                    .ElementAttr("class", "btn-success btn-oblong btn-width-100 mg-t-15 mg-l-5")
                                    .OnClick("guardar")
                                )
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

